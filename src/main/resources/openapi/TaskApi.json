            "type": "string",
            "format": "uuid"
          },
          "priority": {
            "type": "integer",
            "minimum": 1,
            "default": 1
          },
          "groupId": {
            "type": "string",
            "format": "uuid"
          },
          "executeTs": {
            "type": "string",
