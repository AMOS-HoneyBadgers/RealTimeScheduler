    "license": {
      "name": "MIT"
    }
  },
  "servers": [
    {
      "url": "https"
    }
  ],
  "paths": {
    "/test/hello/": {
      "get": {
        "description": "",
        "parameters": [
          {
            "name": "username",
            "in": "query",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "$ref": "#/components/responses/200"
          },
          "400": {
            "$ref": "#/components/responses/400"
          }
        }
      },
      "post": {
        "description": "",
        "requestBody": {
          "description": "",
          "required": false,
          "content": {

          }
        },
        "responses": {
          "default": {
            "$ref": "#/components/responses/200"
          }
        }
      }
    },
    "/test/hello/{user}": {
      "get": {
        "parameters": [
          {
            "name": "user",
            "in": "path",
            "schema": {
              "type": "string"
            },
            "required": true
          }
        ],
        "responses": {
          "default": {
            "description": "Bad Request",
            "content": {
              "application/json": {
                "schema": {
                  "type": "string",
                  "title": "errorMessage"
                }
              }
            }
          }
        }
      }
    },
    "/api/task/add": {
      "post": {
        "responses": {
          "default": {
            "$ref": "#/components/responses/200"
          }
        },
        "requestBody": {
          "required": true,
          "content": {
