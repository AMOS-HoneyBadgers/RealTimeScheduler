{
  "TaskModel": {
    "type": "object",
    "required": [
      "id",
      "group_id"
    ],
    "properties": {
      "id": {
        "description": "Primary id of task object",
        "type": "string",
        "format": "uuid"
      },
      "group_id": {
        "description": "Id of group this task is assigned to",
        "type": "string",
        "maxLength": 128
      },
      "priority": {
        "description": "Priority of this task for scheduling",
        "type": "integer",
        "minimum": 0,
        "maximum": 999
      },
      "active_times": {
        "$ref": "#ActiveTimesModel"
      },
      "working_days": {
        "description": "Boolean array, where each entry indicates, whereas tasks are allowed to be dispatched on that day (Starting with monday)",
        "type": "array",
        "items": {
          "type": "boolean"
        },
        "minItems": 7,
        "maxItems": 7
      },
      "type_flag": {
        "description": "Type of this task (relevant for scheduling)",
        "type": "string",
        "default": "batch",
        "enum": [
          "batch",
          "realtime"
        ]
      },
      "mode": {
        "description": "Mode of task",
        "type": "string",
        "default": "parallel",
        "enum": [
          "sequential",
          "parallel"
        ]
      },
      "retries": {
        "description": "Number of times, this task has been retried",
        "type": "integer",
        "minimum": 0,
        "default": 0
      },
      "paused": {
        "description": "Boolean, which identifies, whereas this group (and all of its tasks) are currently paused",
        "type": "boolean",
        "default": "false"
      },
      "force": {
        "description": "If set to true: send task directly to dispatcher without scheduling",
        "type": "boolean",
        "default": "false"
      },
      "index_number": {
        "description": "[only with mode = sequential] Index number of task in corresponding sequence",
        "type": "integer",
        "minimum": 1
      },
      "parallelism_degree": {
        "description": "[only with mode = parallel] Number of tasks allowed to be executed at the same time",
        "type": "integer",
        "minimum": 1
      },
      "meta": {
        "description": "Key-value object for meta-data",
        "type": "array",
        "uniqueItems": true,
        "items": {
          "type": "object",
          "properties": {
            "key": {
              "type": "string"
            },
            "value": {
              "type": "string"
            }
          }
        }
      }
    }
  },
  "GroupModel": {
    "type": "object",
    "required": [
      "id"
    ],
    "properties": {
      "id": {
        "description": "Primary id of task object",
        "type": "string",
        "maxLength": 128
      },
      "parent_id": {
        "description": "Id of parent group object",
        "type": "string",
        "maxLength": 128
      },
      "priority": {
        "description": "Priority of this task for scheduling",
        "type": "integer",
        "minimum": 0,
        "maximum": 999
      },
      "active_times": {
        "$ref": "#ActiveTimesModel"
      },
      "working_days": {
        "description": "Boolean array, where each entry indicates, whereas tasks are allowed to be dispatched on that day (Starting with monday)",
        "type": "array",
        "items": {
          "type": "boolean"
        },
        "minItems": 7,
        "maxItems": 7
      },
      "type_flag": {
        "description": "Type of this task (relevant for scheduling)",
        "type": "string",
        "default": "batch",
        "enum": [
          "batch",
          "realtime"
        ]
      },
      "mode": {
        "description": "Mode of tasks of this group",
        "type": "string",
        "default": "parallel",
        "enum": [
          "sequential",
          "parallel"
        ]
      },
      "paused": {
        "description": "Boolean, which identifies, whereas this group (and all of its tasks) are currently paused",
        "type": "boolean",
        "default": "false"
      },
      "last_index_number": {
        "description": "Index number of last dispatched task of this group",
        "type": "integer",
        "minimum": 0
      },
      "parallelism_degree": {
        "description": "[only with mode = parallel] Number of tasks allowed to be executed at the same time",
        "type": "integer",
        "minimum": 1
      }
    }
  },
  "ActiveTimesModel": {
    "description": "Array containing time frames, in which tasks are allowed to be dispatched",
    "type": "array",
    "items": {
      "type": "object",
      "properties": {
        "from": {
          "description": "Start of time frame",
          "type": "string",
          "format": "partial-time"
        },
        "to": {
          "description": "End of time frame",
          "type": "string",
          "format": "partial-time"
        }
      }
    }
  },
  "ErrorModel": {
    "type": "object",
    "properties": {
      "code": {
        "type": "string"
      },
      "errorMessage": {
        "type": "string"
      }
    },
    "required": [
      "code",
      "message"
    ]
  },
  "ResponseModel": {
    "type": "object",
    "properties": {
      "code": {
        "type": "string"
      },
      "message": {
        "type": "string"
      }
    },
    "required": [
      "code"
    ]
  }
}